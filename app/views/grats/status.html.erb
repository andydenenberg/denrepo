<div class="container">

<br><br>
<%= Time.now.in_time_zone.strftime("%m/%d/%Y at %I:%M%p") %>


<div class="table-responsive">
	<table class="table table-bordered table-striped table-sm">
	  <thead>
	    <tr>
	      <th>Start Date</th>
	      <th style="text-align: right">Symbol</th>
	      <th style="text-align: right">Quantity</th>
		  <th style="text-align: right">Start Price</th>
	      <th style="text-align: right">Last Price</th>
	      <th style="text-align: right">Current Value</th>
	      <th style="text-align: right">Gain/Loss</th>		  
	    </tr>
	  </thead>
<% @total = 0 %>
	  <tbody>
		  <% @grats.each_with_index do |g,i| %> 
	      <tr>
	        <td><%= g.close_date.strftime("%m/%d/%Y") %></td>
	        <td style="text-align: right"><%= g.symbol %></td>
	        <td style="text-align: right"><%= number_with_precision(g.quantity, :precision => 0, :delimiter => ',') %></td>
			<td style="text-align: right"><%= number_to_currency(g.cost) %></td>
			<td style="text-align: right"><%= number_to_currency(@gains[i][1]) %></td>
			<td style="text-align: right"><%= number_to_currency(g.quantity * @gains[i][1]) %></td>
				<% @total += g.quantity * @gains[i][1] %>
			<td style="text-align: right"><%= number_to_currency(@gains[i][5], precision: 0) %></td>
	      </tr>		
		  <% end %>
  	    <tr>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <th style="text-align: right">Total Gains</th>
  	      <td style="text-align: right"><%= number_to_currency(@total_gain) %></td>
		 </tr>
  	    <tr>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <th style="text-align: right">Total Losses</th>
  	      <td style="text-align: right"><%= number_to_currency(@total_loss) %></td>
		 </tr>
  	    <tr>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <td></td>
  	      <th style="text-align: right">Total Value</th>
  	      <td style="text-align: right"><%= number_to_currency(@total) %></td>
  	      <td></td>
		 </tr>
  	    <tr>
	  </tbody>
	</table>
</div>
